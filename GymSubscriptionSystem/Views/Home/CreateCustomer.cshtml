@model CreateCustomerViewModel

@{
    ViewData["Title"] = "Create New Customer";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="CreateCustomer" method="post">
    <div class="d-flex justify-content-center align-items-center mb-3">
        <p class="me-2 mb-0">Name: </p>
        <input class="me-2" type="text" asp-for="Name"/>
    </div>

    <div class="d-flex justify-content-center align-items-center mb-3">
        <p class="me-2 mb-0">Gender: </p>
        <select class="me-2" asp-for="Gender">
            <option value="none">None</option>
            <option value="female">Female</option>
            <option value="male">Male</option>
        </select>
    </div>

    <div class="d-flex justify-content-center align-items-center mb-3">
        <p class="me-2 mb-0">Subscription Plan:</p>
        <select class="me-2" asp-for="SubscriptionPlanMonths">
            <option value="1">1 Month</option>
            <option value="2">2 Months</option>
            <option value="3">3 Months</option>
            <option value="12">1 Year</option>
        </select>
    </div>

    <div class="d-flex justify-content-center align-items-center mb-3">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>

